<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.BrocCoInvite" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/primary</item>
    </style>

    <style name="Theme.BrocCoInvite" parent="Base.Theme.BrocCoInvite" />

    <style name="TextInputOutLined" parent="Widget.Material3.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@color/widget_primary</item>
    </style>

    <style name="FloatingLabel" >
        <item name="android:textColor">@color/primary_darker</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ColoredButton" parent="Widget.AppCompat.Button.Colored">
        <item name="backgroundTint">@color/primary_darker</item>
    </style>

    <style name="LoadingDialog" parent="ThemeOverlay.Material3.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
</resources>